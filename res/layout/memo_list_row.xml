<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="3.33dp">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="6.67dip">

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<TextView
					android:id="@+id/memo_list_row_user_id_textView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingRight="3.33dip"
					android:textColorHighlight="#000AD8"
					android:textAppearance="@style/WhiteBaseSecondaryText" />
				<TextView
					android:id="@+id/memo_list_row_content_textView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/memo_list_row_user_id_textView"
					android:paddingRight="3.33dip"
					android:autoLink="web|email"
					android:textColorHighlight="#000AD8"
					android:textAppearance="@style/WhiteBaseSecondaryText" />
			</RelativeLayout>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical">
				<TextView
					android:id="@+id/memo_list_row_time_textView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="@style/GrayBaseSmallText" />
			</RelativeLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
