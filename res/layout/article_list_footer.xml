<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dip"
    android:gravity="center_vertical">

	<RelativeLayout
		android:id="@+id/article_footer_layout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true">
	    <ProgressBar
	    	android:id="@+id/article_footer_progress"
	    	android:layout_width="30dip"
	    	android:layout_height="30dip" />
	       
	    <TextView android:id="@+id/article_footer_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/article_footer_progress"
	        android:layout_centerVertical="true"
	        android:paddingLeft="6.66dip"
	        android:text="@string/bbs_progressbar_loading"
	        android:textAppearance="@style/CommonTextAppearanceListContentsWhite" />
	</RelativeLayout>

    <TextView 
    	android:id="@+id/article_footer_logo" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_below="@+id/article_footer_layout"
        android:layout_alignParentLeft="true"
        android:paddingLeft="13.33dip"
        android:text="DP"
        android:textAppearance="@style/YellowBaseSecondaryText" />

</RelativeLayout>
