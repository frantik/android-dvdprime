<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"	android:layout_height="match_parent"	android:layout_width="match_parent">	<LinearLayout 		android:id="@+id/article_content_footer_layout"		android:orientation="vertical"		android:layout_width="match_parent" 		android:layout_height="wrap_content"		android:gravity="center">						<View 			android:layout_width="match_parent"			android:layout_height="20dp" />		<Button android:id="@+id/article_content_comment_button"			android:layout_width="232dip"			android:layout_height="48dip" 			android:text="@string/button_add_comment"			android:textSize="14sp"			android:textColor="@drawable/btn_font_color"			android:background="@drawable/btn_selector" />							<!-- 하단의 위 방향 화살표 표시 레이아웃 -->		<RelativeLayout			android:id="@+id/article_content_arrow_up_layout"			android:layout_width="match_parent"			android:layout_height="36.66dp">			<ImageView				android:id="@+id/article_content_arrow_up_imageView"				android:layout_width="wrap_content"				android:layout_height="wrap_content"				android:layout_centerInParent="true"				android:src="@android:drawable/arrow_up_float" />		</RelativeLayout>			</LinearLayout></LinearLayout>