<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="3.33dp">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<ImageView
			android:id="@+id/article_comment_list_row_avatar_imageView"
			android:layout_width="46.66dip"
			android:layout_height="46.66dip" 
			android:scaleType="fitXY"
			android:background="@drawable/ic_avatar_picture" />

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="6.67dip">

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<TextView
					android:id="@+id/article_comment_list_row_nameNcontents_textView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:paddingRight="3.33dip"
					android:textColorHighlight="#000AD8"
					android:textAppearance="@style/BlackThemeCommentText" />
			</RelativeLayout>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<LinearLayout
					android:orientation="vertical"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					
					<View
						android:id="@+id/article_comment_list_row_mediaTopMargin_view"
						android:layout_width="match_parent"
						android:layout_height="3.33dip" />
					<ImageView
						android:id="@+id/article_comment_list_row_media_imageView"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:scaleType="fitXY"
						android:background="@drawable/photo_frame_selector"
						android:visibility="gone" />
					<View
						android:id="@+id/article_comment_list_row_mediaBottomMargin_view"
						android:layout_width="match_parent"
						android:layout_height="3.33dip" />
				</LinearLayout>
			</RelativeLayout>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical">
				<TextView
					android:id="@+id/article_comment_list_row_time_textView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="@style/GrayBaseSmallText" />
			</RelativeLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
